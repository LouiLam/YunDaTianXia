<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide_3" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/guide_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/index_btn_reg"
            style="@style/MTextViewBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/index_reg" />

        <TextView
            android:id="@+id/index_btn_login"
            style="@style/MTextViewBtn"
              android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:text="@string/index_login" />
    </LinearLayout>

</FrameLayout>