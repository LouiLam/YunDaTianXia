<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/CircleArrow" />

        <TextView
            android:id="@id/toCity"
            style="@style/city"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:id="@+id/my_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/icon_yundan_switch" />

        <TextView
            android:id="@id/fromCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:text="装:益阳"
            android:textSize="12sp" />

        <TextView
            android:id="@id/toProvinceCityDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="62dp"
            android:text="卸:湖南怀化会同县"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/location"
            style="@style/QueRenFaChe"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:text="轨迹"
            android:textSize="11sp" />

      

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/logo" />

        <TextView
            android:id="@id/name"
            style="@style/ZhangAnMan"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="65dp" />

        <TextView
            android:id="@id/licensePlate"
            style="@style/ChePai"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp" />

        <ImageView
            android:id="@id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            
            android:background="@drawable/mgr_otw_more" />
  <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="40dp"
             android:layout_marginRight="20dp"
            android:orientation="vertical"
             android:layout_alignParentRight="true"
            >


            <TextView
                style="@style/QueRenFaChe"
                android:text="消息"
                   android:layout_marginTop="5dp"
                android:textSize="11sp" />

            <TextView
                   android:layout_marginTop="5dp"
                style="@style/QueRenFaChe"
                android:text="分享"
                android:textSize="11sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_waybill_arrow" />
             <View   android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layerType="software"
            android:background="@drawable/shape_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</LinearLayout>