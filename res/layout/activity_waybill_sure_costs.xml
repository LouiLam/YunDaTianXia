<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tlz.shipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/main_padding" >

        <com.tlz.shipper.ui.widget.TextViewBarIcon
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_background="@color/grey"
            app:left_text="@string/waybill_sure_costs_title" />

      

        <com.tlz.shipper.ui.widget.EditTextBarIconTitleClearText
            android:id="@+id/waybill_create_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:left_text="@string/waybill_create_costs"
            app:right_hint="@string/waybill_create_costs_hint"
            app:unit_right_text="å…ƒ" />

        <com.tlz.shipper.ui.widget.EditTextBarIconTitleClearTextAndRemark
            android:id="@+id/waybill_create_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:icon_right_background="@drawable/icon_clear_text"
            app:right_hint="@string/waybill_create_remarks_hint" />

        <LinearLayout
            android:id="@+id/waybill_create_image_bar_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/image0"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
         	 />

            <ImageView
                android:id="@+id/image1"
                    android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image2"
                    android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image3"
                    android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                />

            <ImageView
                android:id="@+id/image4"
                    android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
              />
        </LinearLayout>

    </LinearLayout>

</ScrollView>