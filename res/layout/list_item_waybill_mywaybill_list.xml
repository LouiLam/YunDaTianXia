<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView style="@style/CircleArrow" />

        <TextView
            android:id="@id/toCity"
            style="@style/city"
            android:layout_marginLeft="@dimen/hangzhou_margin_left"
            android:layout_marginTop="@dimen/hangzhou_margin_top" />

        <TextView
            style="@style/DaiFaChe"
            android:layout_alignBottom="@id/toCity"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@id/toCity" />

        <ImageView
            android:id="@+id/my_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/switch_margin_left"
            android:layout_marginTop="@dimen/switch_margin_top"
            android:background="@drawable/icon_yundan_switch" />

        <TextView
            android:id="@id/fromCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fromCity_margin_left"
            android:layout_marginTop="@dimen/fromCity_margin_top"
            android:text="装:益阳"
            android:textSize="12sp" />

        <TextView
            android:id="@id/toProvinceCityDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/to_margin_left"
            android:layout_marginTop="@dimen/to_margin_top"
            android:text="卸:湖南怀化会同县"
            android:textSize="12sp" />

        <TextView
            android:id="@id/content"
            android:layout_width="@dimen/content_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_margin_top"
            android:text="24吨，运费12000元。收货单位：太原神通"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/location"
            style="@style/QueRenFaChe"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="100dp"
            android:text="确认发车"
           />

        <ImageView
            android:id="@id/headicon"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:layout_marginLeft="@dimen/logo_margin_left"
            android:layout_marginTop="@dimen/logo_margin_top"
            android:background="@drawable/logo" />

        <TextView
            android:id="@id/name"
            style="@style/ZhangAnMan"
            android:layout_marginLeft="@dimen/name_margin_left"
            android:layout_marginTop="@dimen/name_margin_top" />

        <TextView
            android:id="@id/licensePlate"
            style="@style/ChePai"
            android:layout_marginLeft="@dimen/licensePlate_margin_left"
            android:layout_marginTop="@dimen/licensePlate_margin_top" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_waybill_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_line"
            android:layerType="software" />
    </RelativeLayout>

</LinearLayout>