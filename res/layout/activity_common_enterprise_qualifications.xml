<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.tlz.shipper"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/main_padding" >

        <com.tlz.shipper.ui.widget.TextViewBarPure
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/grey"
            app:left_text="@string/enterprise_qualifications_tip" />


        <com.tlz.shipper.ui.widget.TextViewBarIcon
            android:id="@+id/eq_businesslicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon_right_width="15dp"
              app:icon_right_height="15dp"
            app:icon_right_drawable="@drawable/logo"
            app:left_text="@string/enterprise_qualifications_businesslicence" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <com.tlz.shipper.ui.widget.TextViewBarIcon
            android:id="@+id/eq_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                  app:icon_right_width="15dp"
              app:icon_right_height="15dp"
            app:icon_right_drawable="@drawable/logo"
            app:left_text="@string/enterprise_qualifications_organization" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
        <com.tlz.shipper.ui.widget.TextViewBarIcon
            android:id="@+id/eq_taxregist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                  app:icon_right_width="15dp"
              app:icon_right_height="15dp"
            app:icon_right_drawable="@drawable/logo"
            app:left_text="@string/enterprise_qualifications_taxregist" />
               <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />
    </LinearLayout>

</ScrollView>